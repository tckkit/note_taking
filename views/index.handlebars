<div class="note-section row">
    <div class="col-lg-6">
        <h4>Welcome back, {{user}}</h4>
        <p>Add a note</p>
        <form id="add" class="row">
            <div class="col col-sm-9">
                <textarea type="text" name="note"></textarea>
            </div>
            <div class="col col-sm-3">
                <input type="submit" value="Add">
            </div>
        </form>
    </div>

    <div class="col-lg-6">
        <h4>Notes<span class="saving">Saving...</span></h4>
        <div id="notes">
            {{#each notes}}
            <div class="note">
                <span class="input"><textarea data-id="{{ this.id }}">{{ this.notes }}</textarea></span>

                <button class="remove btn btn-xs" data-id="{{ this.id }}"><i class="fa fa-trash"
                        aria-hidden="true"></i></button>
            </div>
            {{/each}} 
        </div>
    </div>
</div>